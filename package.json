{
  "name": "nayuki-project",
  "displayName": "nayuki_project",
  "description": "nayuki project extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:xmake.lua"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nayuki-project.newClass",
        "title": "create a new class"
      },
      {
        "command": "nayuki-project.newFile",
        "title": "create a new file"
      },
      {
        "command": "nayuki-project.newModule",
        "title": "create a new module"
      },
      {
        "command": "nayuki-project.newTests",
        "title": "create a new tests"
      }
    ],
    "submenus": [
      {
        "id": "nayuki-project.nayukiMenu",
        "label": "nayuki",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "nayuki-project.nayukiMenu",
          "when": "explorerResourceIsFolder",
          "group": "navigation@1"
        }
      ],
      "nayuki-project.nayukiMenu": [
        {
          "command": "nayuki-project.newFile",
          "when": "explorerResourceIsFolder",
          "group": "nayuki@0"
        },
        {
          "command": "nayuki-project.newClass",
          "when": "explorerResourceIsFolder",
          "group": "nayuki@1"
        },
        {
          "command": "nayuki-project.newModule",
          "when": "explorerResourceIsFolder",
          "group": "nayuki@2"
        },
        {
          "command": "nayuki-project.newTests",
          "when": "explorerResourceIsFolder",
          "group": "nayuki@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.26.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "nayuki-project": "file:"
  }
}